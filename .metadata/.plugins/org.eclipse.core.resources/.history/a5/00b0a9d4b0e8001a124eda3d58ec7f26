#include <stdio.h>
#include <stdlib.h>

int main(void) {

//Pedir 5 numeros enteros y mostrar el promedio
	setbuf(stdout, NULL); // consulta que hace

	int numero;
	int acumulador = 0;
	float promedio;
	int respuestaScan;
	int i;

	for (i = 0; i < 5; i++) {
		printf("\n Ingrese un numero: ");
		respuestaScan  = scanf("d%", &numero);
		while (respuestaScan == 0){


		}
	}


	printf("Numero 1: ");
	fflush(stdin);

	for (i = 1; i < 4; i++) {
		printf("Ingrese el %d numero: ",i);
		//fflush(stdin);
		scanf("%d", &numero);
		acumulador = numero;

	}



	printf("El numero acumulado es: %d", acumulador);

	return EXIT_SUCCESS;
}
