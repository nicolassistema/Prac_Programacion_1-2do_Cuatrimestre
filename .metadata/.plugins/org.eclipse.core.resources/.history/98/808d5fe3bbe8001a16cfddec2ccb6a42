#include <stdio.h>
#include <stdlib.h>

main(void) {

	int acumulador=0;
	int numero;
	int contador=0;
	float promedio;

	setbuf(stdout, NULL); // consulta que hace
	//for(numero = 0 ; numero != 999 ; numero++)

	while(1){

		printf("Ingrese un numero: ");

		fflush(stdin);
		scanf("%d",&numero);
		if(numero!=999){


			acumulador = acumulador + numero;
			contador++;
		}else{
			break;
		}
		promedio = (float) acumulador / contador;
		printd("\n El promedio es: %.2f", promedio);

	}















	return EXIT_SUCCESS;
}
